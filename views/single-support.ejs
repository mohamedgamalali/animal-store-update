<%- include('./includes/head.ejs') %>

<div class="row">
<div class="col-md-12">
    <div class="row">
        <%if(error){%>
            <div class="col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <p class="card-title"></p>
                        <div class="alert alert-danger" role="alert"><%=error%></div>
                    </div>
                </div>
        <%}%>
        
        <div class="col-md-12">
            <div class="card">
                <h5 class="card-header">شكوه</h5>
                <div class="card-body">
                    <h4><%=supportMessage.user.name%></h4>
                    <p class="card-text"><%=supportMessage.message%></p>
                </div>
                <br>
                <hr width="100%">
                <br>
                <div class="card-body">
                    <h5>اجب عليه</h5>
                    <form action="/admin/support" method="POST">
                        <textarea name="answer" cols="150" rows="10" required></textarea>
                        <input type="hidden" name="id" value="<%=supportMessage._id%>">
                </div>
                <div class="card-footer text-left">
                        <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                    
                        <button class="btn btn-primary" type="submit">ارسل</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
<%- include('./includes/end.ejs') %>
